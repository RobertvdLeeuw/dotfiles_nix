{
  "name": "Python Development",
  "image": "docker.io/library/python:3.13-slim-trixie",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": false,
      "configureZshAsDefaultShell": true,
      "username": "root",
      "upgradePackages": true
    },
    "ghcr.io/tobiaschc/devcontainer-features/starship:1": {
      "userShell": "zsh",
      "nerdFont": "FiraCode",
      "defaultConfig": false,
      "localConfig": true
    }
  },
  "forwardPorts": [
    8000,
    8080
  ],
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/starship.toml,target=/root/.config/starship.toml,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/zshrc,target=/root/.zshrc,type=bind"
  ]
}
