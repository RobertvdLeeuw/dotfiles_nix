{
  "name": "Python Development",
  "image": "docker.io/library/python:3.13-slim-trixie",
  "features": {},
  "forwardPorts": [
    8000,
    8080
  ],
  "postCreateCommand": "chmod +x /workspace/.devcontainer/shell_init.sh && /workspace/.devcontainer/shell_init.sh; zsh; source /workspace/.devcontainer/zshrc",
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/starship.toml,target=/root/.config/starship.toml,type=bind"
  ]
}
