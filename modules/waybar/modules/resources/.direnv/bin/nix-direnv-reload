#!/usr/bin/env bash
set -e
if [[ ! -d "/mnt/storage/nc/Personal/nixos/modules/waybar/modules/resources" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/mnt/storage/nc/Personal/nixos/modules/waybar/modules/resources")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/mnt/storage/nc/Personal/nixos/modules/waybar/modules/resources" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/mnt/storage/nc/Personal/nixos/modules/waybar/modules/resources/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/mnt/storage/nc/Personal/nixos/modules/waybar/modules/resources/.envrc" "/mnt/storage/nc/Personal/nixos/modules/waybar/modules/resources/.direnv"/*.rc
